{
  "name": "nuxt-firebase",
  "version": "1.0.0",
  "author": "wadakenji",
  "license": "MIT",
  "dependencies": {
    "@nuxtjs/dotenv": "^1.4.1",
    "core-js": "2.6.11",
    "firebase": "^7.12.0",
    "firebase-tools": "^7.16.1",
    "nuxt": "^2.12.0"
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "deploy": "yarn build && firebase deploy",
    "deploy-functions": "firebase deploy --only functions",
    "deploy-except-functions": "firebase deploy --except functions",
    "build-functions": "cd functions && npm run build && cd .. ",
    "functions": "yarn build-functions && firebase emulators:start --only functions",
    "serve": "yarn build && yarn build-functions && firebase serve"
  },
  "devDependencies": {
    "@nuxtjs/vuetify": "^1.11.0"
  }
}
